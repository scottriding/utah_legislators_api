source :rubygems

# The framework
gem 'sinatra', '~> 1.3.3'

# The web server
gem 'thin', '~> 1.5.0'

# Some syntactic sugar for JSONP
gem 'sinatra-jsonp', '~> 0.4.1'

# An HTTP client for calling to the Utah Geocoding API
gem 'rest-client', '~> 1.6.7'

# JSON parser
gem 'json', '~> 1.7.6'

# Gem Bundler
gem 'bundler', '1.2.3'

# For connecting to the database
gem 'sequel', '~> 3.43.0'
gem 'pg', '~> 0.14.1'

# For running database loading and unloading script
gem 'trollop', "~> 2.0"

group :development do
  # For scraping the Utah Legislative websites for data
  gem 'nokogiri', '~> 1.5.6'
end
