source 'https://rubygems.org'

ruby '2.2.2'

# The framework
gem 'sinatra', :github => 'sinatra/sinatra'

# The web server
gem 'thin', '~> 1.6.3'

# Some syntactic sugar for JSONP
gem 'sinatra-jsonp', '~> 0.4.3'

# An HTTP client for calling to the Utah Geocoding API
gem 'rest-client', '~> 1.7.2'

# JSON parser
gem 'json', '~> 1.8.2'

# Gem Bundler
gem 'bundler', '1.7.12'

# For connecting to the database
gem 'sequel', '~> 4.18.0'
gem 'pg', '~> 0.18.1'

# For running database loading and unloading script
gem 'trollop', "~> 2.1.1"

group :development do
  # For scraping the Utah Legislative websites for data
  gem 'nokogiri', '~> 1.6.5'
end
